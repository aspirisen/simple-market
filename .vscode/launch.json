    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Application",
            "port": 9229,
            "restart": true,
            "outFiles": [
                "${workspaceFolder}/dist/server.js"
            ],
            "sourceMapPathOverrides": {
                "webpack:///*": "${workspaceFolder}/server/*",
            },
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}