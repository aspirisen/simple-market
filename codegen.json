{
  "overwrite": true,
  "schema": "../server/schema.graphql",
  "documents": "./lib/**/*.gql",
  "generates": {
    "./typings/api.ts": {
      "plugins": [
        {
          "@graphql-codegen/add": "/** This file is generated by webpack, do not edit it. */"
        },
        "@graphql-codegen/typescript"
      ],
      "config": {
        "enumsAsTypes": true,
        "scalars": {
          "DateTime": "string"
        }
      }
    },
    "./": {
      "preset": "near-operation-file",
      "presetConfig": {
        "baseTypesPath": "./typings/api.ts",
        "extension": ".gql.d.ts"
      },
      "plugins": [
        {
          "@graphql-codegen/add": "/** This file is generated by webpack, do not edit it. */"
        },
        "@graphql-codegen/typescript-operations"
      ],
      "config": {
        "namingConvention": "keep"
      }
    }
  },
  "hooks": {
    "afterAllFileWrite": "npx eslint --fix"
  }
}